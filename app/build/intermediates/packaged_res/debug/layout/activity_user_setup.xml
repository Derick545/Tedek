<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgColor"
    tools:context=".UserSetupActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/font"
        android:gravity="center"
        android:textSize="35sp"
        android:text="Setup Profile" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/displayPicture"
        android:layout_width="149dp"
        android:layout_height="129dp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        app:civ_border_color="@color/card"
        app:civ_border_width="2dp"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/usernameEdt"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:ems="10"
        android:layout_marginTop="25sp"
        android:textSize="20sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_gravity="center"
        android:padding="15px"
        android:drawableLeft="@drawable/person"
        android:background="@drawable/textbox"
        android:textColor="@color/font"
        android:hint="Username"
        android:textColorHint="@color/font"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/firstNameEdt"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:ems="10"
        android:layout_marginTop="15sp"
        android:textSize="20sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_gravity="center"
        android:padding="15px"
        android:drawableLeft="@drawable/info"
        android:background="@drawable/textbox"
        android:textColor="@color/font"
        android:hint="First Name"
        android:textColorHint="@color/font"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/lastNameEdt"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:ems="10"
        android:layout_marginTop="15sp"
        android:textSize="20sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_gravity="center"
        android:padding="15px"
        android:drawableLeft="@drawable/info"
        android:background="@drawable/textbox"
        android:textColor="@color/font"
        android:hint="Last Name"
        android:textColorHint="@color/font"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/phoneNumberEdt"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:ems="10"
        android:layout_marginTop="15sp"
        android:textSize="20sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_gravity="center"
        android:padding="15px"
        android:drawableLeft="@drawable/phone"
        android:background="@drawable/textbox"
        android:textColor="@color/font"
        android:hint="Number"
        android:textColorHint="@color/font"
        android:inputType="phone" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:textSize="20sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:textColor="@color/font"
        android:layout_gravity="center"
        android:text="Gender" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/maleCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/font"
            android:layout_weight="1"
            android:text="Male" />

        <CheckBox
            android:id="@+id/femaleCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/font"
            android:layout_weight="1"
            android:text="Female" />

        <CheckBox
            android:id="@+id/otherCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/font"
            android:layout_weight="1"
            android:text="Other" />
    </LinearLayout>



    <TextView
        android:id="@+id/dateTxt"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:ems="10"
        android:layout_marginTop="15sp"
        android:textSize="20sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_gravity="center"
        android:padding="15px"
        android:drawableLeft="@drawable/calender"
        android:background="@drawable/textbox"
        android:textColor="@color/font"
        android:hint="Date Of Birth"
        android:textColorHint="@color/font" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveBtn"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:textColor="@color/font"
        android:background="@drawable/button"
        android:layout_gravity="center"
        android:text="SAVE" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progress"
        android:layout_width="105dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="@color/card"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/prog" />
</LinearLayout>